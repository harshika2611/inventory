<html>

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Customer</title>
  <link rel="stylesheet" href="src/css/form.css">
  <link rel="stylesheet" href="src/css/manageCustomers/customerForm.css" />
  <script src="js/products/productInfo.js"></script>

</head>

<body class="body">
  <div class="row form-popup" id="myForm">
    <div class="col-md-12 " data-bs-spy="scroll">
      <form id="productForm" name="productForm">
        <div class="container">
          <h1>Product Details</h1>
          <p onclick="closeForm()" id="closeCustomerForm">close</p>
          <fieldset>

            <div class="form-floating mb-3 customerform__errordiv">
              <input name="productname" type="text" class="form-control customerInput" id="floatingInput"
                placeholder="name@example.com">
              <label for="floatingInput">Product Name </label>
            </div>

            <div class="form-floating mb-3 customerform__errordiv">
              <input name="quantity" type="number" class="form-control customerInput" id="floatingInput"
                placeholder="name@example.com">
              <label for="floatingInput">Quantity </label>
            </div>

            <div class="form-floating mb-3 customerform__errordiv">
              <input name="cost" type="number" class="form-control customerInput" id="floatingInput"
                placeholder="name@example.com">
              <label for="floatingInput">Cost</label>
            </div>
            <div class="form-floating mb-3 customerform__errordiv">
              <input name="availability" type="number" class="form-control customerInput" id="floatingInput"
                placeholder="name@example.com">
              <label for="floatingInput">Availability</label>
            </div>

          </fieldset>
          <div id="error"></div>
          <p id="submitBtn" class="btn btn-outline-primary" onclick="submitbtn()">Submit</p>
        </div>
      </form>
    </div>
  </div>

</body>

</html>