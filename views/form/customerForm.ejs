<html>

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Customer</title>
  <link rel="stylesheet" href="src/css/form.css">
  <script src="js/manageCustomers/manageCustomerFormValidation.js"></script>
</head>

<body class="body">
  <div class="row form-popup" id="myForm">
    <div class="col-md-12 " data-bs-spy="scroll">
      <form action="/api/insertCustomer" method="POST" id="customerForm" name="customerForm"
        onsubmit="return manageCustomerFormValidation()">
        <div class="container">
          <h1>Customer Details</h1>
          <p onclick="closeForm()">close</p>
          <fieldset>

            <div class="form-floating mb-3 customerform__errordiv">
              <input name="firstname" type="text" class="form-control" id="floatingInput"
                placeholder="name@example.com">
              <label for="floatingInput">First Name </label>
            </div>

            <div class="form-floating mb-3 customerform__errordiv">
              <input name="lastname" type="text" class="form-control" id="floatingInput" placeholder="name@example.com">
              <label for="floatingInput">Last Name </label>
            </div>

            <div class="form-floating mb-3 customerform__errordiv">
              <input name="email" type="text" class="form-control" id="floatingInput" placeholder="name@example.com">
              <label for="floatingInput">Email address</label>
            </div>

            <div class="form-floating mb-3 customerform__errordiv">
              <input name="phonenumber" type="text" class="form-control" id="floatingInput"
                placeholder="name@example.com">
              <label for="floatingInput">Phone Number </label>
            </div>

            <div class="form-floating customerform__errordiv">
              <textarea name="address" class="form-control" placeholder="Leave a comment here"
                id="floatingTextarea"></textarea>
              <label for="floatingTextarea">Address</label>
            </div>

            <div class="form-floating mb-3 customerform__errordiv">
              <input name="zipcode" type="text" class="form-control" id="floatingInput" placeholder="name@example.com">
              <label for="floatingInput">Zipcode </label>
            </div>


            <div class="form-floating customerform__errordiv">
              <select name="state" class="form-select" id="stateSelectCombo" aria-label="Floating label select example"
                onchange="getCity(this)">
              </select>
            </div>

            <div class="form-floating customerform__errordiv">
              <select name="city" class="form-select" id="citySelectCombo" aria-label="Floating label select example">
              </select>
            </div>

          </fieldset>
          <input type="submit" class="btn btn-outline-primary" value="Submit">
          <input type=" reset" class="btn btn-outline-danger" value="Reset">
        </div>
      </form>
    </div>
  </div>

</body>

</html>