<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Store</title>
  <link rel="stylesheet" type="text/css" href="/css/bootstrap.min.css" />
  <script src="/js/bootstrap.js"></script>
  <script src="js/store/store.js"></script>
  <script src="js/commonFunction/commonFunction.js"></script>
  <!-- <link rel="stylesheet" href="src/css/manageCustomers/manageCustomers.css" /> -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
  <link rel="stylesheet" href="src/css/dashboard/dashboard.css" />
  <link rel="stylesheet" href="src/css/allpage.css" />
  <link rel="stylesheet" href="src/css/store/store.css" />
  <link rel="stylesheet" href="/sweetalert2/sweetalert2.min.css">
  <script src="/sweetalert2/sweetalert2.min.js"></script>
</head>

<body onload="getStore()">
  <%- include('../components/navigation')%>

    <div class="div-second managecustomer-section" id="child">
      <div>
        <header>
          <input class="form-control" type="search" style="max-width: 500px; margin-left: 300px;" placeholder="Search"
              aria-label="Search" name="Search" onkeyup="search(this.value)" />
        </header><br>
        <main>
          <section>
            <div class="container">
              <div class="row1">
                <h4 class="text-center">Warehouses Data</h4>
                <button type="button" id="btn" class="btn btn-primary" onclick="addNewStore()">Add</button>
              </div>
            </div><br>
            <table id="t1" class="table table-hover" ml-5>
              <thead>
                <!-- <%if(typeof storeDetails !=="undefined" ){%>
                  <%for(let key in storeDetails[0]){%>
                    <th class="bg-light" scope="col">
                      <%= key%>
                    </th>
                    <%}%> -->
                    <th class="bg-light">No.</th>
                    <th class="bg-light">Name</th>
                    <th class="bg-light">Storage Type</th>
                    <th class="bg-light">Place</th>
                    <th class="bg-light">Updated</th>
                    <th colspan="2" class="bg-light">Action</th>
              </thead>
              <tbody m-5>
                <%for(let element of storeDetails){%>
                  <tr>
                    <%for(let key in element){%>
                      <td>
                        <%= element[key]%>
                      </td>
                      <%}%>
                        <td style="width: 0px;" id="<%= element.storeId%>" class="store__actionbutton"
                          onclick="openUpdateStoreForm(this)">
                          <button type="button" class="btn btn-outline-primary ">Edit
                          </button>
                        </td>
                        <td id="<%= element.storeId%> submitButton" class="store__actionbutton"
                          onclick="deleteStoreDetails(`<%= element.storeId%>`)">
                          <button type="button" class="btn btn-outline-danger">Delete</button>
                        </td>
                  </tr>
                  <%}%>
                    <%}%>
              </tbody>
            </table>
          </section>
          <%- include('../form/storeForm')%>
        </main>
      </div>
    </div>

</body>

</html>