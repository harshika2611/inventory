<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Store</title>
  <link rel="stylesheet" type="text/css" href="/css/bootstrap.min.css" />
  <script src="/js/bootstrap.js"></script>
  <script src="js/store/store.js"></script>
  <script src="js/commonFunction/commonFunction.js"></script>
  <link rel="stylesheet" href="src/css/dashboard/dashboard.css" />
  <link rel="stylesheet" href="src/css/allpage.css" />
  <link rel="stylesheet" href="src/css/store/store.css" />
  <style>
    .form-popup {
      display: none;
      position: absolute;
      bottom: 0;
      top: 50px;
      z-index: 9;
      width: 500px;
      right: 490px;
    }

    /* Add styles to the form container */
    .form-container {
      max-width: 300px;
      padding: 10px;
      background-color: white;
      /* height: 1000px; */
    }

    .form-control {
      width: 700px;
      display: flex;
    }

    .form-inline {
      display: flex;
      margin-left: 200px;
    }

    .row2 {
      margin-top: 26px;
      margin-left: 100px;
    }

    .row1 {
      margin-top: 33px;
      margin-left: 110px;
      display: flex;
    }

    #btn {
      margin-left: 620px;
    }
  </style>
</head>

<body>
  <%- include('../components/navigation')%>
    <div class="div-second managecustomer-section">
      <div class="managecustomer-container">
        <header>
          <form class="form-inline form1 my-2 my-lg-0">
            <input class="form-control form2 mr-sm-2" type="search" placeholder="Search" aria-label="Search" />
            <button class="btn btn-outline-success my-2 my-sm-0" type="submit">
              Search
            </button>
          </form>
        </header>
        <main>
          <section>
            <div class="container">
              <div class="row1">
                <h4>Storage Data</h4>
                <button type="button"  id="btn" class="btn btn-primary" onclick="addNewStore()">
                  Add
                </button>
              </div>
            </div>
            <table class="store__table">
              <thead>
                <%if(typeof storeDetails !=="undefined" ){%>
                  <%for(let key in storeDetails[0]){%>
                    <th>
                      <%= key%>
                    </th>
                    <%}%>
                      <th>Action</th>
              </thead>
              <tbody>
                <%for(let element of storeDetails){%>
                  <tr>
                    <%for(let key in element){%>
                      <td>
                        <%= element[key]%>
                      </td>
                      <%}%>
                        <td id="<%= element.storeId%>" class="store__actionbutton"
                          onclick="openUpdateStoreForm(this)">
                          <button type="button" class="btn btn-outline-primary">Edit
                          </button>
                        </td>
                        <td id="<%= element.storeId%>" class="store__actionbutton" onclick="deleteStoreDetails(`<%= element.storeId%>`)">
                          <button type="button" class="btn btn-outline-danger">Delete</button>
                        </td>
                  </tr>
                  <%}%>
                    <%}%>
              </tbody>
            </table>
          </section>
          <%- include('../form/storeForm')%>
        </main>
      </div>
    </div>
</body>

</html>