<body>
  <%- include("../components/navigation.ejs")%>
    <div class="div-second">
      <div id="childbody">
        <header>
          <form class="form-inline form1 my-2 my-lg-0">
            <input class="form-control form2 mr-sm-2" type="search" placeholder="Search" aria-label="Search">
            <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
