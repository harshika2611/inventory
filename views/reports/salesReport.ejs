<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Document</title>
  <link rel="stylesheet" type="text/css" href="/css/bootstrap.min.css" />
  <script src="/js/bootstrap.js"></script>
  <link rel="stylesheet" href="src/css/allpage.css" />
  <style>
    .wid-50 {
      width: 140px;
    }
  </style>
</head>

<body style="background-color: #eeeeee" onload="fetchData()">
  <%- include("../components/navigation")%>
    <div class="div-second">
      <div class="d-flex justify-content-center">
        <section class="card m-2 p-4" style="width: 30rem">
          <span class="fs-2">Overview</span>
          <div class="d-flex justify-content-center align-items-center my-3 h-100">
            <div class="mx-3 wid-75 btn btn-info">
              <p class="fs-4">Revanue</p>
              ₹<span id="totalSalles">2,000</span>
            </div>
            <div class=" mx-3 wid-75 btn btn-success">
              <p class="fs-4">Total Profit</p>
              ₹<span id="totalProfit">1,000</span>
            </div>
          </div>
        </section>
        <section class="card m-3 p-3" style="width: 30rem">
          <div>
            <span class="fs-2">Best selling category</span>
            <!-- <span class="float-end m-3">See All</span> -->
          </div>
          <div>
            <table class="table table-hover">
              <thead>
                <tr id="categorytHeader"></tr>
              </thead>
              <tbody id="categoryData"></tbody>
            </table>
          </div>
        </section>
      </div>

      <section class="d-flex justify-content-center">
        <div class="card mx-5 mb-2 p-3" style="width: 67rem">
          <div>
            <span class="fs-2">Best selling Product</span>
            <span class="float-end m-3" onclick="showProduct()">See All</span>
          </div>
          <div>
            <table class="table table-hover">
              <thead>
                <tr id="productHeader"></tr>
              </thead>
              <tbody id="productData"></tbody>
            </table>
          </div>
        </div>
      </section>
    </div>
    <script src="/js/reports/salesreport.js"></script>
</body>

</html>