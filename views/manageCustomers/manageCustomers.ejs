<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Manage Customers</title>
  <link rel="stylesheet" type="text/css" href="/css/bootstrap.min.css" />
  <script src="/js/bootstrap.js"></script>
  <link rel="stylesheet" href="src/css/allpage.css" />
  <link rel="stylesheet" href="src/css/manageCustomers/manageCustomers.css" />
  <script src="js/manageCustomers/manageCustomers.js"></script>
  <script src="js/manageCustomers/manageCustomerInsert.js"></script>
  <script src="js/manageCustomers/manageCustomerUpdate.js"></script>
  <script src="js/commonFunction/commonFunction.js"></script>
  <script src="js/manageCustomers/manageCustomerFormValidation.js"></script>
  <script src="js/manageCustomers/manageCustomerFilter.js"></script>
  <script src="js/components/messagePopUp.js"></script>
  <script src="js/manageCustomers/manageCustomerFileUpload.js"></script>
</head>

<body onload="getCustomers()">
  <%- include('../components/navigation', {data})%>
    <section class="div-second managecustomer-section">
      <div class="managecustomer-container" id="managecustomer-container">
        <%- include('../components/messagePopUp')%>
        <div class="d-flex">
          <img src="icons/cust.png" alt="" width="40px" height="40px" style="margin-top: 20px;">&emsp;&emsp;
          <p class="managecustomerTitle">Customers</p>
        </div>
          <div class="managecustomer-container__button">
            <p class="customerfilterbutton" onclick="customerFilterShow()">Filter</p>
          </div>
          <div class="importDataDiv">
            <p class="importDataButton" onclick="showFileUpload()">Import Data</p>
            <p class="addnewcustomerbutton" onclick="addNewCustomer()">Add New</p>
            <form enctype="multipart/form-data" id="customerFileUploadForm" name="customerFileUploadForm">
              <input type="file" id="customersFile" name="customersFile" accept=".csv">
              <p id="fileUploadButton" onclick="customerFileUpload()">Upload File</p>
            </form>
          </div>

      </div>
      <%- include('../form/customerForm')%>
        <%- include('../components/pagginationComponent')%>
    </section>
</body>

</html>